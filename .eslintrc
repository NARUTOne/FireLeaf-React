{
	"parser": "babel-eslint",
	"extends": "eslint:recommended",
	"plugins": [
		"react" 
	],
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
		"indent": [0],
		"quotes": [0],
		"semi": [
			"error",
			"always"
		],
		"prefer-const": [2],
		"spaced-comment": [2],
		"jsx-quotes": [0],
		"key-spacing": [2],
		"camelcase": [0],
		"comma-spacing": [2],
		"react/jsx-filename-extension": [1, { "extensions": [".js"] }],
		"global-require": [1],
		"react/jsx-no-bind": [0],
		"react/jsx-uses-react": "error", 
		"react/jsx-uses-vars": "error",
		"no-console": "off"
	}
}